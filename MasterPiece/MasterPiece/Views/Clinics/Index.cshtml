@model List<Clinic>

@section Styles {
    <link rel="stylesheet" href="~/css/Clinics.css" />
}

@section Scripts {
    <script src="~/js/site.js"></script>
    <script src="~/js/filter.js"></script>
    <script src="~/js/search.js"></script>
}


<div class="page-heading header-text" style="background-color: #e6e3fb;">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h3>Clinics</h3>
            </div>
        </div>
    </div>
</div>



<div class="section properties" style="margin-top: 42px;">
    <div class="container">
      
        <div class="row" style="margin-bottom:10%">
            <div class="col-lg-12">
                <div class="axil-shop-top">
                    <div class="d-flex justify-content-between align-items-center flex-wrap">

                        <!-- القوائم المنسدلة على اليمين -->
                        <div class="d-flex gap-3 flex-wrap">

                            <!-- فلترة حسب التقييم -->
                            <div class="dropdown">
                                <button class="btn dropdown-toggle properties-filter" type="button" data-bs-toggle="dropdown" aria-expanded="false" style=" background-color:#CDC1FF;">
                                    Filter by Rating
                                </button>
                                <ul class="dropdown-menu ">
                                    <li><a class="dropdown-item" href="#" data-filter="*">Show All</a></li>
                                    <li><a class="dropdown-item" href="#" data-filter="5">⭐⭐⭐⭐⭐ (5 Stars)</a></li>
                                    <li><a class="dropdown-item" href="#" data-filter="4">⭐⭐⭐⭐ (4 Stars)</a></li>
                                    <li><a class="dropdown-item" href="#" data-filter="3">⭐⭐⭐ (3 Stars)</a></li>
                                    <li><a class="dropdown-item" href="#" data-filter="2">⭐⭐ (2 Stars)</a></li>
                                    <li><a class="dropdown-item" href="#" data-filter="1">⭐ (1 Star)</a></li>
                                </ul>
                            </div>

                            <!-- فلترة حسب الموقع -->
                            <div class="dropdown">
                                <button class="btn dropdown-toggle properties-filter" type="button" data-bs-toggle="dropdown" aria-expanded="false" style=" background-color:#CDC1FF;">
                                    Filter by Location
                                </button>
                                <ul class="dropdown-menu " id="locationFilter">
                                    <li><a class="dropdown-item" href="#" data-location="all">Show All</a></li>
                                    <li><a class="dropdown-item" href="#" data-location="Amman">Amman</a></li>
                                    <li><a class="dropdown-item" href="#" data-location="Irbid">Irbid</a></li>
                                    <li><a class="dropdown-item" href="#" data-location="Zarqa">Zarqa</a></li>
                                    <li><a class="dropdown-item" href="#" data-location="Aqaba">Aqaba</a></li>
                                </ul>
                            </div>

                        </div>

                        <!-- زر البحث على اليسار -->
                        <div class="search-container" style="display: flex;">
                            <input type="text" id="clinicSearch" class="form-control" placeholder="Search clinics...">
                            <button id="searchBtn" class="btn " style=" background-color:#CDC1FF;">Search</button>
                        </div>

                    </div>
                </div>
            </div>
        </div>


        <div class="row properties-box" id="clinicList">
            @foreach (var clinic in Model)
            {
                <div class="col-lg-4 col-md-6 align-self-center mb-30 properties-items">
                    <div class="item">
                        <img src="~/Img/@clinic.Image" alt="@clinic.Name" asp-append-version="true" style="width: 100%;">
                        <span class="category">@clinic.Category</span>
                        <h6>
                            <div >
                                @for (int i = 0; i < clinic.Rating; i++)
                                {
                                    <i class="fa-solid fa-star"></i>
                                }
                            </div>
                        </h6>
                        <h4><a href="#">@clinic.Name</a></h4>
                        <div style="display: flex;">
                            <i class="fa-solid fa-location-dot" style="margin-top: 5px;"></i>
                            <p style="margin-left: 5px;">@clinic.Location</p>
                        </div>
                        <div style="display: flex;">
                            <i class="fa-solid fa-clock" style="margin-top: 5px;"></i>
                            <p style="margin-left: 5px;">@clinic.WorkingHours</p>
                        </div>
                        <hr>
                        <div class="main-button">
                            <a asp-controller="Clinics" asp-action="ClinicDetails" asp-route-id="@clinic.Id">Schedule a visit</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
