@model IEnumerable<MasterPiece.Models.User>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}




@{
    ViewData["Title"] = "Manage Users";
}


<div class="container mt-5">
    <h2 class="mb-4">All Users</h2>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Role</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>
                        @if (!string.IsNullOrEmpty(user.Image))
                        {
                            <img src="~/Img/@user.Image" alt="@user.Name" style="width: 60px; height: 60px; object-fit: cover; border-radius: 50%;">
                        }
                        else
                        {
                            <img src="~/Img/placeholder.png" alt="No Image" style="width: 60px; height: 60px; object-fit: cover; border-radius: 50%;">
                        }
                    </td>
                    <td>@user.Name</td>
                    <td>@user.Email</td>
                    <td>@user.Phone</td>
                    <td>
                        @(user.UserRoles.FirstOrDefault()?.Role?.Name ?? "No Role")
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>